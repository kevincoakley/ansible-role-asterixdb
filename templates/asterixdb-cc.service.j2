[Unit]
Description=AsterixDB CC Service
After=network.target

[Service]
Type=simple
Environment=JAVA_HOME={{ java_home }}
User={{ asterixdb_service_username }}
Group={{ asterixdb_service_group }}
ExecStart=/opt/asterixdb/bin/asterixcc -config-file /opt/asterixdb/cc.conf

SyslogIdentifier=asterixdb-cc
Restart=always

[Install]
WantedBy=multi-user.target